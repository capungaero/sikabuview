                <div class="data-grid">
                    <div class="data-card">
                        <div class="data-icon backup">
                            <i class="fas fa-download"></i>
                        </div>
                        <div class="data-content">
                            <h3>Backup & Restore</h3>
                            <p>Export dan import semua data dalam format JSON</p>
                            <div class="data-actions">
                                <button class="btn btn-primary" onclick="exportData()">
                                    <i class="fas fa-download"></i> Export Data
                                </button>
                                <button class="btn btn-secondary" onclick="document.getElementById('import-file').click()">
                                    <i class="fas fa-upload"></i> Import Data
                                </button>
                                <input type="file" id="import-file" accept=".json" style="display: none;" onchange="importData(this)">
                            </div>
                        </div>
                    </div>

                    <div class="data-card">
                        <div class="data-icon status">
                            <i class="fas fa-server"></i>
                        </div>
                        <div class="data-content">
                            <h3>Database Status</h3>
                            <div class="db-status">
                                <div class="status-item">
                                    <i class="fas fa-wifi"></i>
                                    <span>Status Koneksi: <strong id="db-status">Connected</strong></span>
                                </div>
                                <div class="status-item">
                                    <i class="fas fa-cog"></i>
                                    <span>Mode Database: <strong id="db-mode">IndexedDB</strong></span>
                                </div>
                                <div class="status-item">
                                    <i class="fas fa-chart-bar"></i>
                                    <span>Total Records: <strong id="total-records">245</strong></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="data-card danger">
                        <div class="data-icon reset">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="data-content">
                            <h3>Reset Data</h3>
                            <div class="danger-zone">
                                <p class="warning">
                                    <i class="fas fa-warning"></i>
                                    <strong>Peringatan:</strong> Tindakan ini akan menghapus semua data secara permanen!
                                </p>
                                <button class="btn btn-danger" onclick="confirmResetData()">
                                    <i class="fas fa-trash-alt"></i> Reset Semua Data
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="data-summary">
                    <h3><i class="fas fa-chart-pie"></i> Ringkasan Data</h3>
                    <div class="summary-grid">
                        <div class="summary-item">
                            <div class="summary-icon bookings">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            <div class="summary-content">
                                <h4>Bookings</h4>
                                <span class="summary-count" id="bookings-count">124</span>
                            </div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-icon guests">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="summary-content">
                                <h4>Guests</h4>
                                <span class="summary-count" id="guests-count">89</span>
                            </div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-icon rooms">
                                <i class="fas fa-bed"></i>
                            </div>
                            <div class="summary-content">
                                <h4>Rooms</h4>
                                <span class="summary-count" id="rooms-count">20</span>
                            </div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-icon payments">
                                <i class="fas fa-credit-card"></i>
                            </div>
                            <div class="summary-content">
                                <h4>Payments</h4>
                                <span class="summary-count" id="payments-count">98</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Modal for confirmations -->
    <div id="modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modal-title">Konfirmasi</h3>
                <span class="close" onclick="closeModal()">&times;</span>
            </div>
            <div class="modal-body">
                <p id="modal-message">Apakah Anda yakin?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="modal-confirm">Ya</button>
                <button class="btn btn-secondary" onclick="closeModal()">Batal</button>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="js/modern-navigation.js"></script>
    <script src="js/database.js"></script>
    <script src="js/booking.js"></script>
    <script src="js/payment.js"></script>
    <script src="js/finance.js"></script>
    <script src="js/print.js"></script>
    <script src="js/advanced-features.js"></script>
    <script src="js/reports-housekeeping.js"></script>
    <script src="js/app.js"></script>
</body>
</html>